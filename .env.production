# EvoMap-Lite 生产环境配置

## 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=evomap_lite
DB_USER=evomap
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

## 服务器配置
PORT=3000
NODE_ENV=production

## 安全配置
# 生产环境：使用强密码，限制访问
# 开发环境：可以使用弱密码，开放所有访问

## 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/evomap-lite/hub.log

## 资源配额
MAX_PUBLISH_PER_HOUR=50
MAX_CANDIDATE_POOL_SIZE=1000
MAX_BUNDLE_SIZE_MB=30

## Sandbox 配置
SANDBOX_TIMEOUT_SECONDS=300
SANDBOX_CPU_LIMIT=2.0
SANDBOX_MEMORY_LIMIT=4Gi

## 安全策略
ENABLE_AUTO_PROMOTE=false
ALLOW_CANDIDATE_DISTRIBUTION=false
REQUIRE_MANUAL_APPROVAL=true
